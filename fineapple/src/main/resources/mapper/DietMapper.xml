	</delete>
	
	<update id="updateFavMealItem" parameterType="FavMeal">
	update fav_meal_info set
	serving_size = #{intake:DOUBLE}
	WHERE FAV_MEAL_INFO_No = #{favMealInfoNo:INTEGER}
	
	
	
	</update>
	
	
	
	
	
	
	
	
	
	
	
	
	

