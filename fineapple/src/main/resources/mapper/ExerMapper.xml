 	<insert id="addExer"  parameterType="Exer">
	INSERT
	INTO EXER (EXER_NO, EXER_CATE, EXER_LV, EXER_NAME, EXER_KCAL, EXER_VIDEO_NAME, EXER_VIDEO_TIME, EXER_LINK)
	VALUES(10,
    #{exerCate:INTEGER},
